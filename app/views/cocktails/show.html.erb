<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="show-container">
        <h1><%= @cocktail.name %></h1>
        <%= cl_image_tag @cocktail.photo, height: 360, width: 360, crop: :fill %>
        <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.amount %> --- <%= dose.ingredient.name %>
          </li>
        <% end %>
        </ul>
        <%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail), class: "card-show-etc" %> |
        <%= link_to 'Edit', edit_cocktail_path(@cocktail), class: "card-show-etc"  %> |
        <%= link_to 'Back to Cocktails', cocktails_path, class: "card-show-etc"  %>
      </div>
    </div>
  </div>
</div>





